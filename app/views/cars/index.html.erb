<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.redd.it/this-update-brought-out-lots-of-cars-i-like-it-so-far-ill-v0-ukutcy6kfred1.jpg?width=3840&format=pjpg&auto=webp&s=5e66f19c16c38c979950bf6a40df071bef3be76d">
  <div class="container text-center">
    <h1>Welcome to your Awesome Garage!</h1>
    <p>Organize your dream cars in your personalized categories.</p>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-md-4 mb-3">
        <div class="card-category">
          <h2><%= link_to car.brand, car_path(car), class: "text-black text-decoration-none" %></h2>
          <p><%= car.model %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="form-new">
        <h2>Leave a comment!</h2>
        <%= simple_form_for @review do |f| %>
          <%= f.input :comment, label: false, placeholder: 'Your comment here...' %>
          <%= f.input :rating, label: false, collection: 1..5, prompt: 'Select a rating' %>
          <%= f.submit class: "btn btn-flat w-100" %>
        <% end %>

        <%= link_to categories_path, class: "btn btn-ghost w-100 mt-3" do %>
          <i class="fa-solid fa-arrow-left"></i> Back to categories
        <% end %>
      </div>
    </div>
  </div>
</div>
